<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cbAutoScan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="@string/auto_scan"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <CheckBox
            android:id="@+id/cbWholeDevice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="@string/scan_whole_device"
            android:textAppearance="@android:style/TextAppearance.Medium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cbStartScan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="@string/start_scan"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <CheckBox
            android:id="@+id/cbCloseWhenDone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="@string/close_when_done"
            android:textAppearance="@android:style/TextAppearance.Medium" />
    </LinearLayout>

    <View
        style="@android:style/Holo.Light.ButtonBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:dividerVertical"
        android:defaultFocusHighlightEnabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:focusedByDefault="false" />

    <ListView
        android:id="@+id/lvScanItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        style="@android:style/Holo.Light.ButtonBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:dividerVertical"
        android:defaultFocusHighlightEnabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:focusedByDefault="false" />

    <!-- todo was style="@android:style/Holo.Light.ButtonBar" -->
    <LinearLayout
        android:id="@+id/buttonsLayout"
        style="?android:buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- todo was @android:style/Widget.Holo.Button.Borderless -->
        <Button
            android:id="@+id/btnPickPath"
            style="?android:buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/pick_file"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnScan"
            style="?android:buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/scan"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>